# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# YML, JSON: 2 spaces
[*.{yaml,yml,json}]
indent_style = space
indent_size = 2

# Go: 1 tab
[*.go]
indent_style = tab
